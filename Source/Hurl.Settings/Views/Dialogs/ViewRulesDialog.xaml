<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Hurl.Settings.Views.Dialogs.ViewRulesDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Hurl.Settings.Views.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:Hurl.Library.Models"
    mc:Ignorable="d">

    <Grid>
        <ListView
            MinWidth="400"
            ItemsSource="{x:Bind Rules}"
            SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="model:Rule">
                    <StackPanel
                        Background="{StaticResource ControlFillColorDefaultBrush}"
                        BorderBrush="{StaticResource ControlStrokeColorDefaultBrush}"
                        CornerRadius="{StaticResource ControlCornerRadius}"
                        Orientation="Horizontal">
                        <TextBlock
                            Width="80"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            Text="{x:Bind Mode}" />
                        <TextBlock Text="{x:Bind RuleContent}" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
